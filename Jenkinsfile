pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the Application'
            }
        }
        stage('Unit Testing') {
            steps {
                echo 'Running Unit Test cases'
            }
        }
        stage('Sonar Scan') {
            steps {
                echo 'Running Sonar Scans'
            }
        }
    }
}
